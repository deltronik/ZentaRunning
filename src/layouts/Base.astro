<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    h4 {
        text-align: center;
        font-size: 3rem;
        width: 100%;
        border-block-start: 2px solid #1c1c1c;
        padding-block-start: 2rem;
    }
    p {
        text-align: center;
        font-size: 1rem;
        width: 100%;
    }
    .footer {
        text-align: center;
        padding: 1rem;
        background-color: #f1f1f1;
        font-size: 0.9rem;
        color: #555;
        border-top: 1px solid #ddd;
    }
    .footer a {
        color: #1d3557;
        text-decoration: none;
    }
    .footer a:hover {
        text-decoration: underline;
    }
</style>
