---
import Nav from "./header/nav.astro";
---

<header>
    <section class="nav-bar">
        <div class="logo">
            <img src="/newlogo2.png" alt="Zenta running club logo" />
            <h2>Zenta Running</h2>
        </div>
        <Nav />
    </section>
    <slot />
</header>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=swap");
    header {
        width: 100%;
        padding-block-start: 6rem;
    }
    .nav-bar {
        align-items: center;
        display: flex;
        justify-content: space-between;
        left: 0;
        top: 0;
        background-color: light-dark(#000, #fff);
        height: 6rem;
        position: fixed;
        width: 100dvw;
        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            img {
                height: 4rem;
                width: 4rem;
                padding-block-end: 10px;
                margin-inline-start: 2px;
            }
            h2 {
                color: light-dark(#8ac355, #000);
                font-family: "Caveat", cursive;
                font-optical-sizing: auto;
                font-weight: 800;
                font-size: 3rem;
                font-style: normal;
            }
        }
    }
</style>
