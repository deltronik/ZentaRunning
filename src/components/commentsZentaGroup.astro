<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Caja de comentarios flotante (HTML + CSS)</title>
        <style>
            /* Ocultar el checkbox */
            #toggle-comments {
                display: none;
            }

            /* Bot√≥n flotante */
            label[for="toggle-comments"] {
                position: fixed;
                bottom: 20px;
                right: 20px;
                background-color: #0078ff;
                color: white;
                border: none;
                border-radius: 50%;
                width: 60px;
                height: 60px;
                font-size: 28px;
                display: flex;
                justify-content: center;
                align-items: center;
                cursor: pointer;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
                transition:
                    transform 0.2s ease,
                    background-color 0.3s;
                z-index: 9999;
            }

            label[for="toggle-comments"]:hover {
                background-color: #005fd1;
                transform: scale(1.1);
            }

            /* Caja flotante oculta */
            .comment-box {
                position: fixed;
                inset: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                background: rgba(0, 0, 0, 0.6);
                backdrop-filter: blur(4px);
                z-index: 9998;
                opacity: 0;
                pointer-events: none;
                transition: opacity 0.3s ease;
            }

            /* Mostrar cuando el checkbox est√° activado */
            #toggle-comments:checked ~ .comment-box {
                opacity: 1;
                pointer-events: all;
            }

            /* Contenedor interno */
            .comment-content {
                background: #fff;
                width: 90%;
                max-width: 800px;
                height: 80%;
                border-radius: 16px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
                padding: 20px;
                position: relative;
                overflow: hidden;
                display: flex;
                flex-direction: column;
            }

            /* Bot√≥n de cierre */
            .close-btn {
                position: absolute;
                top: 12px;
                right: 16px;
                font-size: 28px;
                color: #333;
                cursor: pointer;
                transition: color 0.3s;
            }

            .close-btn:hover {
                color: #ff4c4c;
            }

            /* Cerrar el modal cuando se hace clic en el bot√≥n de cerrar */
            .close-btn {
                pointer-events: all;
            }

            /* ‚ÄúClic fuera‚Äù ‚Äî simulaci√≥n */
            .comment-box::before {
                content: "";
                position: absolute;
                inset: 0;
            }

            /* Para el √°rea interior */
            #disqus-placeholder {
                flex: 1;
                overflow-y: auto;
                margin-top: 40px;
            }
        </style>
    </head>
    <body>
        <!-- Checkbox invisible que controla la visibilidad -->
        <input type="checkbox" id="toggle-comments" />

        <!-- Bot√≥n flotante -->
        <label for="toggle-comments" title="Abrir comentarios">üí¨</label>

        <!-- Caja flotante -->
        <div class="comment-box">
            <div class="comment-content">
                <label for="toggle-comments" class="close-btn" title="Cerrar"
                    >&times;</label
                >
                <div id="disqus-placeholder">
                    <div id="disqus_thread"></div>
