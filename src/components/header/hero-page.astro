<section class="hero">
    <div class="ruta">
        <h1>Zenta <span>Running</span></h1>
        <img src="/img/new-logo-white.png" alt="Zenta Running Logo" />
    </div>

    <div class="flotante" id="contador">
        <p>La proxima carreara arranca en:</p>
        <p>
            <span id="dias">00</span> Dias, <span id="horas">00</span> Horas,
            <span id="minutos">00</span> Minutos y <span id="segundos">00</span>
            Segundos
        </p>

        <!-- down-caret correctamente cerrado -->
        <div class="down-caret">
            <i class="fa-solid fa-circle-down fa-beat"></i>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // --- Contador ---
        const targetDate = new Date("2026-04-10T00:00:00").getTime();

        function actualizarContador() {
            const now = new Date().getTime();
            const diff = targetDate - now;

            if (diff <= 0) {
                // Solo reemplazamos el texto del párrafo final, no todo el contenedor
                const pFinal = document.querySelector(
                    ".flotante p:last-of-type",
                );
                if (pFinal) pFinal.textContent = "¡Finalizado!";
                return;
            }

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor(
                (diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
            );
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            const el = (id) => document.getElementById(id);
            if (el("dias"))
                el("dias").textContent = String(days).padStart(2, "0");
            if (el("horas"))
                el("horas").textContent = String(hours).padStart(2, "0");
            if (el("minutos"))
                el("minutos").textContent = String(minutes).padStart(2, "0");
            if (el("segundos"))
                el("segundos").textContent = String(seconds).padStart(2, "0");
        }

        actualizarContador();
        setInterval(actualizarContador, 1000);

        // --- (opcional) Si querés que el ícono haga algo cuando se clickea:
        const downCaret = document.querySelector(".down-caret");
        if (downCaret) {
            downCaret.addEventListener("click", () => {
                // ejemplo: scrollear hacia abajo 100vh
                window.scrollBy({
                    top: window.innerHeight,
                    behavior: "smooth",
                });
            });
        }
    });
</script>

