---
import Nav from "./../components/header.astro";
import Footer from "./../components/footer.astro";
import Forms from "./../components/forms.astro";
import "./../css/resetCSS.css";
---

<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Form</title>
    </head>
    <body>
        <Nav>
            <section class="hero">
                <div class="route">
                    <h1><span class="zenta">Zenta</span> Runnig</h1>
                </div>
            </section>
        </Nav>
        <main>
            <Forms />
        </main>
        <Footer />
    </body>
</html>
<style>
    .hero {
        background-color: #1c1c1c;
        height: 20rem;
        display: flex;
        text-align: right;
        align-items: center;
        .route {
            background-image: url("/WhiteLine2.png");
            background-repeat: no-repeat;
            background-size: 100% 100%;
            width: 100%;
            height: 5rem;
            display: flex;
            align-items: center;
            justify-content: end;
            h1 {
                font-size: 2.5rem;
                font-family: "Gantari";
                margin-inline-end: 1rem;
                color: #80c044;
                .zenta {
                    color: #1c1c1c;
                }
            }
        }
    }
    main {
        background-image: url("back5.png");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
